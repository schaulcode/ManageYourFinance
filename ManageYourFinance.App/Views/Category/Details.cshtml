@model ManageYourFinance.App.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">Details</h2>

<div>
    <div class=" jumbotron">
        <h4>Category</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Type)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Type)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Active)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Active)
            </dd>

        </dl>
    </div>
    @{
        var transaction = Model.Transactions.First();
    }
    <h4>Transactions</h4>
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <td>@Html.DisplayNameFor(model => transaction.Accounts)</td>
                <td>@Html.DisplayNameFor(model => transaction.Payee)</td>
                <td>@Html.DisplayNameFor(model => transaction.Date)</td>
                <td>@Html.DisplayNameFor(model => transaction.Amount)</td>
                <td>@Html.DisplayNameFor(model => transaction.Memo)</td>
                <td>@Html.DisplayNameFor(model => transaction.Tag)</td>
                <td>@Html.DisplayNameFor(model => transaction.Reference)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Transactions)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Accounts)</td>
                    <td>@Html.DisplayFor(model => item.Payee)</td>
                    <td>@Html.DisplayFor(model => item.Date)</td>
                    <td>@Html.DisplayFor(model => item.Amount)</td>
                    <td>@Html.DisplayFor(model => item.Memo)</td>
                    <td>@Html.DisplayFor(model => item.Tag)</td>
                    <td>@Html.DisplayFor(model => item.Reference)</td>
                </tr>
            }
            </tbody>
    </table>
    @{
        var payee = Model.Payees.FirstOrDefault();
    }
    <h4>Payee</h4>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <td>@Html.DisplayNameFor(model => payee.Name)</td>
                <td>@Html.DisplayNameFor(model => payee.Active)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Payees)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Name)</td>
                    <td>@Html.DisplayFor(model => item.Active)</td>
                </tr>
            }
            </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-info" }) 
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary" })
</p>

@model ManageYourFinance.App.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

    </dl>
    @{
        var transaction = Model.Transactions.First();
    }
    <table class="table">
        <tr>
            <td>@Html.DisplayNameFor(model => transaction.Accounts)</td>
            <td>@Html.DisplayNameFor(model => transaction.Payee)</td>
            <td>@Html.DisplayNameFor(model => transaction.Date)</td>
            <td>@Html.DisplayNameFor(model => transaction.Amount)</td>
            <td>@Html.DisplayNameFor(model => transaction.Memo)</td>
            <td>@Html.DisplayNameFor(model => transaction.Tag)</td>
            <td>@Html.DisplayNameFor(model => transaction.Reference)</td>
        </tr>
        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.Accounts)</td>
                <td>@Html.DisplayFor(model => item.Payee)</td>
                <td>@Html.DisplayFor(model => item.Date)</td>
                <td>@Html.DisplayFor(model => item.Amount)</td>
                <td>@Html.DisplayFor(model => item.Memo)</td>
                <td>@Html.DisplayFor(model => item.Tag)</td>
                <td>@Html.DisplayFor(model => item.Reference)</td>
            </tr>
        }
    </table>
    @{
        var payee = Model.Payees.First();
    }
    <table class="table">
        <tr>
            <td>@Html.DisplayNameFor(model => payee.Name)</td>
            <td>@Html.DisplayNameFor(model => payee.Active)</td>
        </tr>
        @foreach (var item in Model.Payees)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.Name)</td>
                <td>@Html.DisplayFor(model => item.Active)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

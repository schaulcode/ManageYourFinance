@model ManageYourFinance.App.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">Details</h2>

<div>
    <div class=" jumbotron">
        <h4>Category</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Type)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Type)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Active)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Active)
            </dd>

        </dl>
    </div>

    <h4>Transactions</h4>

    @{
        Html.RenderPartial("_Transactions", Model.Transactions);
    }

    @{
        var payee = Model.Payees.FirstOrDefault();
    }
    <h4>Payee</h4>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <td>@Html.DisplayNameFor(model => payee.Name)</td>
                <td>@Html.DisplayNameFor(model => payee.Active)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Payees)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Name)</td>
                    <td>@Html.DisplayFor(model => item.Active)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-info" })
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary" })
</p>
@section Scripts{
    @Scripts.Render("~/bundles/form-submit")
}

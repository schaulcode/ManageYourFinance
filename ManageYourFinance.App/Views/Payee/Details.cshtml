@model ManageYourFinance.App.Models.Payee

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Payee</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

    </dl>
    @{
        var transaction = Model.Transactions.FirstOrDefault();
    }
    <h4>Transactions</h4>
    <table class="table">
        <tr>
            <td>@Html.DisplayNameFor(model => transaction.Payee)</td>
            <td>@Html.DisplayNameFor(model => transaction.Category)</td>
            <td>@Html.DisplayNameFor(model => transaction.Date)</td>
            <td>@Html.DisplayNameFor(model => transaction.Amount)</td>
            <td>@Html.DisplayNameFor(model => transaction.Memo)</td>
            <td>@Html.DisplayNameFor(model => transaction.Tag)</td>
            <td>@Html.DisplayNameFor(model => transaction.Reference)</td>
        </tr>
        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.Payee)</td>
                <td>@Html.DisplayFor(model => item.Category)</td>
                <td>@Html.DisplayFor(model => item.Date)</td>
                <td>@Html.DisplayFor(model => item.Amount)</td>
                <td>@Html.DisplayFor(model => item.Memo)</td>
                <td>@Html.DisplayFor(model => item.Tag)</td>
                <td>@Html.DisplayFor(model => item.Reference)</td>
            </tr>
        }
    </table>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

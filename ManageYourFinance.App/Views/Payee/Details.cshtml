@model ManageYourFinance.App.Models.Payee

@{
    ViewBag.Title = "Details";
}



<div>
    <p>
        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-Tangerine" })
    </p>
    <div class="jumbotron bg-aliceBlue">
        <h2 class="text-center text-Tangerine text-stroke">@Model.Name</h2>
        <hr />
        <dl class="row">
            @*<dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>*@

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Active)
            </dt>

            <dd class="col-sm-9">
                @{
                    if (Model.Active)
                    {
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-check2" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
                        </svg>
                    }
                }
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Category)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Category)
            </dd>

        </dl>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-Tangerine" })
    </div>

    <div class="p-2 mb-3">
        <h4 class="text-center text-white text-stroke">Transactions</h4>

        <div class="p-1">
            @{
                if (Model.Transactions.Count > 0)
                {
                    Html.RenderPartial("_Transactions", Model.Transactions);
                }
                else
                {
                    <h5 class="text-center">There are no Transactions to display</h5>    
                }
            }
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-Tangerine" })
</p>
@section Scripts{
    @Scripts.Render("~/bundles/form-submit")
}